# Grifo API Backend - Environment Variables

# Server Configuration
PORT=10000
NODE_ENV=production

# CORS Configuration
CORS_ORIGINS=https://grifo-portal-v1.netlify.app,https://app.grifovistorias.com,android-app://com.grifo.vistorias,https://portal.grifovistorias.com,https://grifo-portal.netlify.app,https://visio-portal.netlify.app,https://www.visio-portal.com,https://www.grifo-portal.com,https://grifo-api.onrender.com,http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:5173

# Supabase Configuration (para produção)
# As credenciais do Supabase devem ser configuradas como variáveis de ambiente no provedor de hospedagem (ex: Render).
# Não armazene credenciais em arquivos versionados.
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutos
RATE_LIMIT_MAX=100           # 100 requisições por janela

# Security
JWT_SECRET=grifo_prod_jwt_secret_2024_banco_visionaria_secure_key
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d
BYPASS_AUTH=false

PORTAL_ENABLED=true
CORS_ALLOWED_ORIGIN=https://grifo-portal-v1.netlify.app/

