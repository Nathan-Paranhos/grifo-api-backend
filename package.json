{
  "name": "grifo-api-backend",
  "version": "1.0.0",
  "description": "Backend API para o aplicativo Grifo Vistorias",
  "main": "dist/index.js",
  "scripts": {
    "dev": "NODE_ENV=development ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:win": "set NODE_ENV=development&& ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "start:win": "set NODE_ENV=production&& node dist/index.js",
    "start:dev": "cross-env NODE_ENV=development node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "deploy": "npm run build && npm run start",
    "clean": "rimraf dist",
    "build:clean": "npm run clean && npm run build",
    "lint": "echo \"Linting not configured\"",
    "health-check": "node healthcheck.js",
    "docker:build": "docker build -t grifo-api-backend .",
    "docker:run": "docker run -p 3000:3000 grifo-api-backend"
  },
  "keywords": [
    "api",
    "backend",
    "express",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/node": "^20.19.6",
    "axios": "^1.10.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "firebase": "^11.10.0",
    "firebase-admin": "^13.4.0",
    "helmet": "^7.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "rimraf": "^5.0.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "type": "commonjs"
}
