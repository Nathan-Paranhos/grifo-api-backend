# =============================================================================
# GRIFO API - ENVIRONMENT VARIABLES EXAMPLE
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env files to version control!

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment (development, staging, production)
NODE_ENV=development

# Server port
PORT=3000

# API version
API_VERSION=v1

# Application name
APP_NAME="Grifo API"

# Application URL (used for email links, etc.)
APP_URL=https://grifo-api.onrender.com

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# JWT Secret (use a strong, random string in production)
# Generate with: node -e "require('crypto').randomBytes(64).toString('hex')"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT expiration time
JWT_EXPIRES_IN=7d

# JWT refresh token expiration
JWT_REFRESH_EXPIRES_IN=30d

# Bcrypt rounds for password hashing (10-12 recommended)
BCRYPT_ROUNDS=12

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================

# Supabase project URL
SUPABASE_URL=https://your-project.supabase.co

# Supabase anonymous key (public key)
SUPABASE_ANON_KEY=your-supabase-anon-key

# Supabase service role key (private key - keep secure!)
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# =============================================================================
# CORS SETTINGS
# =============================================================================

# Allowed origins for CORS (comma-separated)
# Use * for development, specific domains for production
CORS_ORIGIN=https://grifo-portal.vercel.app,https://grifo-api.onrender.com

# Allow credentials in CORS
CORS_CREDENTIALS=true

# =============================================================================
# RATE LIMITING
# =============================================================================

# Rate limit window in milliseconds (15 minutes = 900000)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# Rate limit message
RATE_LIMIT_MESSAGE="Too many requests, please try again later."

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log format (json, simple)
LOG_FORMAT=simple

# Log file path (relative to project root)
LOG_FILE=logs/app.log

# Maximum log file size in MB
LOG_MAX_SIZE=10

# Maximum number of log files to keep
LOG_MAX_FILES=5

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================

# Maximum file size in bytes (10MB = 10485760)
MAX_FILE_SIZE=10485760

# Maximum number of files per request
MAX_FILES_PER_REQUEST=10

# Allowed file types (comma-separated MIME types)
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,text/plain,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Upload directory (relative to project root)
UPLOAD_DIR=uploads

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================

# SMTP settings for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email sender information
EMAIL_FROM_NAME="Grifo API"
EMAIL_FROM_ADDRESS=noreply@grifo.com

# =============================================================================
# REDIS CONFIGURATION (Optional)
# =============================================================================

# Redis URL for caching and sessions
# REDIS_URL=redis://localhost:6379

# Redis password (if required)
# REDIS_PASSWORD=your-redis-password

# Redis database number
# REDIS_DB=0

# =============================================================================
# DATABASE CONFIGURATION (Optional - if not using Supabase)
# =============================================================================

# PostgreSQL database URL
# DATABASE_URL=postgresql://username:password@localhost:5432/grifo_db

# Database pool settings
# DB_POOL_MIN=2
# DB_POOL_MAX=10
# DB_POOL_IDLE_TIMEOUT=30000

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================

# Google Drive Configuration
GOOGLE_DRIVE_CLIENT_ID=your-google-drive-client-id
GOOGLE_DRIVE_CLIENT_SECRET=your-google-drive-client-secret
GOOGLE_DRIVE_REDIRECT_URI=https://grifo-portal.vercel.app/api/auth/google/callback
GOOGLE_DRIVE_SCOPES=https://www.googleapis.com/auth/drive.file,https://www.googleapis.com/auth/drive.metadata.readonly
GOOGLE_DRIVE_FOLDER_NAME=Grifo_Vistorias

# OneDrive Configuration
ONEDRIVE_CLIENT_ID=your-onedrive-client-id
ONEDRIVE_CLIENT_SECRET=your-onedrive-client-secret
ONEDRIVE_REDIRECT_URI=https://grifo-portal.vercel.app/api/onedrive/callback
ONEDRIVE_SCOPES=Files.ReadWrite,User.Read
ONEDRIVE_FOLDER_NAME=Grifo_Vistorias

# AWS S3 configuration (if using S3 for file storage)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=grifo-uploads

# Google Maps API key (for address validation)
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# SendGrid API key (for email sending)
# SENDGRID_API_KEY=your-sendgrid-api-key

# Twilio configuration (for SMS notifications)
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# MONITORING AND ANALYTICS (Optional)
# =============================================================================

# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics tracking ID
# GA_TRACKING_ID=UA-XXXXXXXXX-X

# New Relic license key
# NEW_RELIC_LICENSE_KEY=your-new-relic-license-key

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable Swagger documentation
ENABLE_SWAGGER=true

# Enable API metrics collection
ENABLE_METRICS=true

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# Enable HTTPS redirect
ENABLE_HTTPS_REDIRECT=false

# Enable maintenance mode
MAINTENANCE_MODE=false

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable debug mode
DEBUG=false

# Enable hot reload
HOT_RELOAD=true

# Enable source maps
SOURCE_MAPS=true

# Mock external services in development
MOCK_EXTERNAL_SERVICES=false

# =============================================================================
# TESTING SETTINGS
# =============================================================================

# Test database URL
# TEST_DATABASE_URL=postgresql://username:password@localhost:5432/grifo_test_db

# Test Supabase configuration
# TEST_SUPABASE_URL=https://your-test-project.supabase.co
# TEST_SUPABASE_ANON_KEY=your-test-supabase-anon-key
# TEST_SUPABASE_SERVICE_ROLE_KEY=your-test-supabase-service-role-key

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Enable compression
ENABLE_COMPRESSION=true

# Compression level (1-9)
COMPRESSION_LEVEL=6

# Enable caching
ENABLE_CACHING=true

# Cache TTL in seconds
CACHE_TTL=3600

# =============================================================================
# SECURITY HEADERS
# =============================================================================

# Content Security Policy
# CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline';"

# HSTS max age in seconds
HSTS_MAX_AGE=31536000

# =============================================================================
# WEBHOOK SETTINGS (Optional)
# =============================================================================

# Webhook secret for validating incoming webhooks
# WEBHOOK_SECRET=your-webhook-secret

# Webhook timeout in milliseconds
# WEBHOOK_TIMEOUT=5000

# =============================================================================
# BACKUP SETTINGS (Optional)
# =============================================================================

# Backup storage configuration
# BACKUP_STORAGE_TYPE=s3
# BACKUP_S3_BUCKET=grifo-backups
# BACKUP_RETENTION_DAYS=30

# =============================================================================
# LOCALIZATION (Optional)
# =============================================================================

# Default language
DEFAULT_LANGUAGE=pt-BR

# Supported languages (comma-separated)
SUPPORTED_LANGUAGES=pt-BR,en-US,es-ES

# Timezone
TIMEZONE=America/Sao_Paulo

# =============================================================================
# BUILD INFORMATION (Automatically set by CI/CD)
# =============================================================================

# Git commit hash
# GIT_COMMIT=abc123def456

# Build date
# BUILD_DATE=2024-01-15T10:30:00Z

# Build number
# BUILD_NUMBER=123

# =============================================================================
# RENDER SPECIFIC SETTINGS (When deploying to Render)
# =============================================================================

# These are automatically set by Render
# RENDER_SERVICE_ID=srv-xxxxx
# RENDER_SERVICE_NAME=grifo-api
# RENDER_EXTERNAL_URL=https://grifo-api.onrender.com

# =============================================================================
# NOTES
# =============================================================================
# 
# 1. Always use strong, unique values for secrets in production
# 2. Never commit .env files to version control
# 3. Use environment-specific .env files (.env.development, .env.production)
# 4. Validate all environment variables on application startup
# 5. Use a secrets management service in production (AWS Secrets Manager, etc.)
# 6. Regularly rotate secrets and API keys
# 7. Monitor for exposed secrets in your codebase
# 8. Use HTTPS in production
# 9. Enable proper CORS settings for your frontend domains
# 10. Set appropriate rate limits based on your usage patterns
#
# =============================================================================