# Configurações do Firebase
# Configure as credenciais do Firebase através de variáveis de ambiente no provedor de hospedagem
FIREBASE_CREDENTIALS=
FIREBASE_STORAGE_BUCKET=

# Configurações do Banco de Dados
DATABASE_URL=postgresql://postgres:password@localhost:5432/grifo_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=grifo_dev
DATABASE_USER=postgres
DATABASE_PASSWORD=password

# Configurações da API
PORT=3006
NODE_ENV=development
JWT_SECRET=grifo_dev_jwt_secret_2024_local_development_key
JWT_REFRESH_SECRET=grifo_dev_jwt_refresh_secret_2024_local_development_key
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# Configurações de CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:5173
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173
CORS_ALLOWED_ORIGIN=http://localhost:3000

# Configurações de Upload
UPLOAD_MAX_SIZE=10485760
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_MAX_REQUESTS=100

# Configurações de Log
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Configurações de Produção
BYPASS_AUTH=false
DEBUG_MODE=false

# Configurações do Portal Web
PORTAL_ENABLED=false
PORTAL_BASE_URL=
PORTAL_API_KEY=
PORTAL_TIMEOUT=30000
PORTAL_MAX_RETRIES=3
PORTAL_RETRY_ATTEMPTS=3

# Configurações de Email (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=