# Configurações do Firebase
FIREBASE_CREDENTIALS={"type":"service_account","project_id":"seu-projeto","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}
FIREBASE_STORAGE_BUCKET=seu-projeto.appspot.com

# Configurações do Banco de Dados
DATABASE_URL=postgresql://usuario:senha@localhost:5432/grifo_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=grifo_db
DATABASE_USER=usuario
DATABASE_PASSWORD=senha

# Configurações da API
PORT=3006
NODE_ENV=development
JWT_SECRET=seu-jwt-secret-muito-seguro
JWT_REFRESH_SECRET=seu-jwt-refresh-secret-muito-seguro

# Configurações de CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Configurações de Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configurações de Log
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configurações de Desenvolvimento
BYPASS_AUTH=false
DEBUG_MODE=false

# Configurações do Portal Web
PORTAL_ENABLED=true
PORTAL_BASE_URL=https://portal.grifo.com
PORTAL_API_KEY=your_portal_api_key_here
PORTAL_TIMEOUT=30000
PORTAL_RETRY_ATTEMPTS=3

# Configurações de Email (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua-senha-app

# Configurações de Notificações Push (opcional)
FCM_SERVER_KEY=sua-chave-fcm

# Configurações de Backup (opcional)
BACKUP_BUCKET=grifo-backups
BACKUP_SCHEDULE=0 2 * * *