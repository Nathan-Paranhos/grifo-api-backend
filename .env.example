# Grifo API Backend - Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=production

# CORS Configuration
CORS_ORIGIN=https://app.grifovistorias.com,android-app://com.grifo.vistorias

# Firebase Configuration
FIREBASE_API_KEY=your_real_api_key_here
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_real_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_real_sender_id
FIREBASE_APP_ID=your_real_app_id

# Firebase Admin SDK Credentials (JSON string)
# IMPORTANTE: Esta variável deve conter o JSON completo das credenciais REAIS do Firebase Admin SDK
# Obtenha em: Firebase Console > Project Settings > Service Accounts > Generate new private key
FIREBASE_CREDENTIALS={"type":"service_account","project_id":"your_real_project_id","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"firebase-adminsdk-...@your_project.iam.gserviceaccount.com",...}

# Development Authentication (apenas para desenvolvimento)
DEV_TOKEN=dev-token-123

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutos
RATE_LIMIT_MAX=100           # 100 requisições por janela

# Security
# IMPORTANTE: Use uma chave JWT forte e única para produção
JWT_SECRET=your_strong_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=1d
BYPASS_AUTH=false