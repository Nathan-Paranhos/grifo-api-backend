{
  "name": "grifo-api",
  "version": "1.0.0",
  "description": "API Backend para o sistema Grifo de Vistorias",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "docker:build": "docker build -t grifo-api .",
    "docker:run": "docker run -p 3000:3000 grifo-api",
    "db:setup": "node scripts/setup-database.js",
    "db:setup:with-data": "node scripts/setup-database.js --with-data",
    "db:reset": "node scripts/setup-database.js --reset",
    "dev:full": "npm run build && npm run db:setup && npm run dev",
    "swagger": "npm run build && node -e \"console.log('Swagger docs available at: http://localhost:3006/api-docs')\"",
    "postinstall": "npm run build"
  },
  "keywords": [
    "api",
    "backend",
    "grifo",
    "vistorias",
    "firebase",
    "express",
    "typescript"
  ],
  "author": "Grifo Team",
  "license": "MIT",
  "dependencies": {
    "@types/cors": "^2.8.19",
    "@types/exceljs": "^0.5.3",
    "@types/express": "^4.17.21",
    "@types/express-validator": "^2.20.33",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.5",
    "@types/pdfkit": "^0.17.2",
    "@types/pg": "^8.15.5",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^10.0.0",
    "@types/validator": "^13.15.2",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "firebase-admin": "^12.0.0",
    "helmet": "^7.1.0",
    "isomorphic-dompurify": "^2.6.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pdfkit": "^0.17.1",
    "pg": "^8.16.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^11.1.0",
    "validator": "^13.11.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
